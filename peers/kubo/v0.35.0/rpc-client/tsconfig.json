{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
        "ES2022"
    ],
    "module": "ES2022",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declarationMap": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "noEmit": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "rootDir": "./src",
    "baseUrl": "./src"
    },
    "include": [
        "src/**/*.ts"
    ],
    "tsc-alias": {
        "resolveFullPaths": true,
        "verbose": false
    }
}